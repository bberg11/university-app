.row
  .col.s12
    %h1.center-align Course Listing

.row
  - @courses.each do |course|
    .col.s6.m6
      .card.blue-grey.darken-1
        .card-content.card-content--min-height.white-text
          %span.card-title #{course.short_name}: #{course.name}
          %p= course.description
        .card-action
          = link_to 'Enroll', '#'
          = link_to 'Info', '#'

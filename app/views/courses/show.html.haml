.row
  .col.s12
    %h1.center-align #{@course.short_name}: #{@course.name}
    %h4.center-align= @course.description

.row
  .col.s12
    %h4.center-align Students Enrolled

    - @course.students.each do |student|
      .col.s6.m6
        .card.blue-grey.darken-1
          .card-content.white-text
            %span.card-title #{student.name}
            %p= student.email
          .card-action
            = link_to 'View Profile', student_path(student)

.row
  .col.s12
    %h1.center-align #{@student.name}'s Profile

.row
  .col.s6.m6
    .card.blue-grey.darken-1
      .card-content.white-text
        %span.card-title #{@student.name}
        %p= @student.email
        %br
        %p Course Enrollments:
        %ul
          - @student.courses.each do |course|
            %li
              = link_to "#{course.short_name}: #{course.name}", course_path(course), class: 'white-text'
      - if logged_in? && current_user == @student
        .card-action
          = link_to 'Edit', edit_student_path(@student)
